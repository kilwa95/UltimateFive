<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BoottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="unlabeled"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_matche"
        android:layout_width="407dp"
        android:layout_height="69dp"
        android:background="@color/yellow"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/parametre_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_add_matche"
        android:layout_centerHorizontal="true"
        android:text="Parametre de matche"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/date_text_view"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/parametre_text_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:hint="Date"
         />

    <EditText
        android:id="@+id/heure_text_view"
        android:layout_width="100dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/parametre_text_view"
        android:hint="Heure"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/duree_text_view"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_text_view"
        android:hint="DurÃ©e"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/type_text_view"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/heure_text_view"
        android:hint="Type"
        android:layout_alignParentRight="true" />


    <EditText
        android:id="@+id/prix_text_view"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_text_view"
        android:layout_centerHorizontal="true"
        android:hint="Prix"
        />
   <TextView
       android:id="@+id/change_image_text_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="5dp"
       android:textStyle="bold"
       android:layout_below="@+id/prix_text_view"
       android:text="click pour changer l'image"/>

    <ImageView
        android:id="@+id/image_matche"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/change_image_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/matcher" />

    <Button
        android:id="@+id/cree_matche"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="cree matche"
        android:layout_below="@id/image_matche"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="30dp"/>


</RelativeLayout>