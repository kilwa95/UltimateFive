<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/recever_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/message_profile_image"
        android:layout_toRightOf="@id/message_profile_image"
        android:background="@drawable/recever_message_layout"
        android:text="recever message here"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/recever_message_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sender_message_layout"
        android:text="sender messages"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_alignParentRight="true" />

</RelativeLayout>